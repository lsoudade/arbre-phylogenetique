{% extends "Layout/main.twig" %}

{% block title %}
   Quizz - Contact
{% endblock %}
   
{% block content %}
    {% form_theme form 'Form/form_div_layout.twig' %}

    <div class="row">
        <div class="col-md-8">
            <form action="{{ path('contact') }}" method="post">

                <div class="form-group form-group-contact-name">
                    {{ form_row(form.name) }}
                </div>
                <div class="form-group form-group-contact-email">
                    {{ form_row(form.email) }}
                </div>
                <div class="form-group form-group-contact-content">
                    {{ form_row(form.content) }}
                </div>
                
                {{ form_rest(form) }}

                <button type="submit" class="btn btn-primary">Envoyer le message</button>
            </form>
        </div>
        
        <div class="col-md-4">
            {% include 'Question/newButton.twig' %}
            {% include 'Layout/ad.twig' %}
        </div>
    </div>
{% endblock %}