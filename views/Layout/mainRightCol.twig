{% extends "Layout/main.twig" %}

{% block content %}
<div class="row">
    <div class="col-md-8">
        {% block main_content %}{% endblock %}
    </div>

    <div class="col-md-4">
        {% include 'Question/newButton.twig' %}

        <div class="share-buttons">
            <span class='st_facebook_large' displayText='Facebook'></span>
            <span class='st_twitter_large' displayText='Tweet'></span>
            <span class='st_googleplus_large' displayText='Google +'></span>
            <span class='st_email_large' displayText='Email'></span>
        </div>

        <div class="share-button-like">
            <span class='st_fblike_large' displayText='Facebook Like'></span>
        </div>
        
        {% include 'Layout/ad.twig' %}
    </div>
</div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">var switchTo5x=true;</script>
    <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
    <script type="text/javascript">stLight.options({publisher: "58f0124a-012d-497e-bd58-8e321b170e1b", doNotHash: false, doNotCopy: false, hashAddressBar: false});</script>
{% endblock %}