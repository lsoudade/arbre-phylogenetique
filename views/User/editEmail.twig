{% extends "Layout/main.twig" %}

{% block content %}
    {% form_theme form 'Form/form_div_layout.twig' %}

    <div class="row">
        <div class="col-md-8">
            <form class="user-edit" action="{{ path('user_edit_email') }}" method="POST">
                {{ form_row(form.email) }}
                {{ form_rest(form) }}
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </form>
        </div>
        
        <div class="col-md-4">
            {% include 'Question/newButton.twig' %}
            {% include 'Layout/ad.twig' %}
        </div>
    </div>
{% endblock %}